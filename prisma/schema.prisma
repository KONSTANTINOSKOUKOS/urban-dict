generator kysely {
  provider = "prisma-kysely"
  output   = "../src/db"
  fileName = "types.ts"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  term       String
  definition  String
  example    String?
  authorName String
  createdAt  DateTime @default(dbgenerated("now()"))
  id         String   @id @default(dbgenerated("cuid()"))
}
