---
import NavLayout from "../layouts/NavLayout.astro";
import Post from "../components/Post";
import { getLatestPosts, getRandomPosts } from "../trpc/client";

const random = await getRandomPosts();
const latest = await getLatestPosts();
---
<NavLayout title="Urban Dict" description="Home page for Urban Dict">
	<h1 class="text-2xl text-center">Latest Posts by the community</h1>
	<ul class="md:space-y-5 md:my-5 my-4 space-y-3">{latest.map((post) => <Post post={post} />)}</ul>
	<div class="bg-gray-400 h-[2px] w-full"></div>
	<h1 class="text-2xl text-center">Some random posts</h1>
	<ul class="md:space-y-5 md:my-5 my-4 space-y-3">{random.map((post) => <Post post={post} />)}</ul>
</NavLayout>
