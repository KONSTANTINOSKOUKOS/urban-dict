---
import NavLayout from "../layouts/NavLayout.astro";
import Post from "../components/Post";
import { getPostsByLetter, getLatestPosts } from "../trpc/client";

const fromN = await getPostsByLetter("N");
const latest = await getLatestPosts();
---

<NavLayout title="Home Page for Urban Dict">
	<h1 class="text-xl">These start from 'N'</h1>
	<ul class="md:space-y-5 md:my-5 my-4 space-y-3">{fromN.map((post) => <Post post={post} />)}</ul>
	<h1 class="text-xl">These are the latest posts</h1>
	<ul class="md:space-y-5 md:my-5 my-4 space-y-3">{latest.map((post) => <Post post={post} />)}</ul>
</NavLayout>
