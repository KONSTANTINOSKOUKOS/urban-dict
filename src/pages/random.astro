---
import NavLayout from "../layouts/NavLayout.astro";
import Post from "../components/Post";
import { getRandomPosts } from "../trpc/client";
import type { IPost } from "../trpc/types";

const posts = await getRandomPosts();
---

<NavLayout title="Get random words from Urban Dict">
    <div class="flex flex-row justify-center items-center gap-3">
        <h1 class="text-4xl text-center">Random Words</h1>
        <a href="/random">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                fill="currentColor"
                class=""
                viewBox="0 0 16 16"
            >
                <path
                    fill-rule="evenodd"
                    d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"
                ></path>
                <path
                    d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"
                ></path>
            </svg>
        </a>
    </div>
    <ul class="md:space-y-5 md:my-5 my-4 space-y-3">
        {posts.map((post: IPost) => <Post post={post} />)}
    </ul>
</NavLayout>
